<h1>質問ゲーム</h1>

<%= form_with url: play_game_path, method: :post do |form| %>
<%= form.label :target_word, "お題の言葉" %>
<%= form.text_field :target_word, placeholder: "お題の言葉を入力" %><br><br>

<%= form.label :question, "質問文" %>
<%= form.text_area :question, placeholder: "質問文を入力" %><br><br>

<%= form.submit "質問する" %>
<% end %>

<!-- 結果を表示する部分 -->
<div id="result">
  <% if @result %>
  <h1>生成された回答</h1>
  <h1>結果</h1>
  <h2><%= @result[:message] %></h2>
  <p>質問文の長さによる点数: <%= @result[:length_score] %> / 100</p>
  <p>お題との関連性による点数: <%= @result[:relevance_score].to_f.round %> / 100</p>
  <p>合計点数: <%= @result[:total_score] %></p>
  <% end %>
</div>